<?xml version="1.0" encoding="UTF-8"?>
<addons>
<addon id="service.downloadmanager.transmission"
       name="Transmission-daemon for Cortex-A9"
       version="1.0.8"
       provider-name="TinyHTPC.co.nz">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.service"
             library="default.py">
        <provides>executable</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary>Transmission: a fast, easy and free BitTorrent client</summary>
    <description>
Transmission is a fast, easy and free BitTorrent client.
Ported from OpenELEC transmission add-on, this has be re-compiled for Cortex-A9.
Transmission can be accessed on a remote web browser via: http://[xbmcIP]:9091
    </description>
    <disclaimer>

    </disclaimer>
    <platform>all</platform>
  </extension>
</addon>

<addon id="skin.pusi" version="1.0.5" name="Pusi skin for XBMC" provider-name="TinyHTPC">
  <requires>
		<import addon="xbmc.gui" version="4.0.0"/>
		<import addon="service.skin.widgets" version="0.0.25"/>
		<import addon="script.favourites" version="4.0.9"/>
		<import addon="script.tvtunes" version="3.0.6"/>
		<import addon="script.tv.show.next.aired" version="5.0.6"/>
		<import addon="script.artwork.downloader" version="12.0.15"/>
		<import addon="script.globalsearch" version="1.1.1"/>
		<import addon="script.artistslideshow" version="1.5.0"/>
		<import addon="script.playalbum" version="0.1.3"/>
		<import addon="os.linux.tiny" version="1.0.0"/>
	</requires>
	<extension point="xbmc.gui.skin" defaultthemename="Textures.xbt" effectslowdown="0.50" debugging="false">
	    <res width="1280" height="720" aspect="16:9" default="true" folder="720p"/>
	</extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">A GUI for XBMC Media Center</summary>
    <description lang="en">A GUI for XBMC Media Center based on tlbb skin by Nessus. To maximize your media entertainment experience with it's fast, unique and unified interface along with all the latest features of XBMC.</description>
    <disclaimer lang="en">Mouse usage is not supported</disclaimer>
    <platform>all</platform>
    <license>Creative Commons Attribution-NonCommercial-Share Alike 3.0 Unported License</license>
    <source>http://TinyHTPC.co.nz</source>
  </extension>
</addon>

<addon id="service.downloadmanager.InternetPVR"
       name="Internet PVR Suite"
       version="1.0.7"
       provider-name="TinyHTPC.co.nz">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
    <import addon="service.downloadmanager.transmission" version="0.1.0"/>
  </requires>
  <extension point="xbmc.python.script"
             library="default.py">
        <provides>executable</provides>
  </extension>
  <extension point="xbmc.service"
             library="service.py">
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">InternetPVR is a Media tracking suit which combines the programs: SickBeard, Couchpotato V2 and Headphones in one Addon</summary>
    <description lang="en">
 - Sickbeard: Tracks your TVShows and automatically downloads the next one when it becomes available.
 - Couchpotato: Automatically searches for and downloads your Movie torrents according to your requests.
 - Headphones: Automatically searches for and downloads Music.

InternetPVR is a fork of lsellens' SickPotatoHead.
    </description>
    <platform>all</platform>
  </extension>
</addon>

<addon id="repository.tinyhtpc-dev.xbmc-addons" name="TinyHTPC Development XBMC Add-on Repository" version="0.0.3" provider-name="TinyHTPC.co.nz">
    <extension point="xbmc.addon.repository" name="TinyHTPC XBMC Add-on Repository">
        <info compressed="false">https://raw.githubusercontent.com/TinyHTPC/xbmc-dev-repo/master/addons.xml</info>
        <checksum>https://raw.githubusercontent.com/TinyHTPC/xbmc-dev-repo/master/addons.xml.md5</checksum>
        <datadir zip="true">https://raw.githubusercontent.com/TinyHTPC/xbmc-dev-repo/master/repo</datadir>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary>Install TinyHTPC Development Addons</summary>
        <description>Download and install addons by TinyHTPC</description>
        <platform>all</platform>
    </extension>
</addon>
</addons>
